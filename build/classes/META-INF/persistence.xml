<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="reunionPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.reunion.bean.Note</class>
    <class>org.reunion.bean.Participer</class>
    <class>org.reunion.bean.Personne</class>
    <class>org.reunion.bean.Groupereunion</class>
    <class>org.reunion.bean.Notecnej</class>
    <class>org.reunion.bean.Reunion</class>
    <class>org.reunion.bean.Personnelcnej</class>
    <class>org.reunion.bean.Duree</class>
    <class>org.reunion.bean.Pole</class>
    <class>org.reunion.bean.Recevoir</class>
    <class>org.reunion.bean.Structure</class>
    <class>org.reunion.bean.Invitation</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/reunion?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
